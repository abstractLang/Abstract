###

    ABSTRACT STANDARD LIBRARY SCRIPT

###

namespace Compilation {

    @public const Std.System.Archtecture targetArch
    @public let uptr currentLine
    @public let uptr currentColumn
    @public let string currentSource
    @public let string functionName
    
    @public enum Operator {
        # assign and reading operators
        assign,
        read,

        # Binary math operators
        addition,
        subtraction,
        multiplication,
        division,
        remainder,

        # Binary boolean operators
        equals,
        notEquals,
        lesserThan,
        greaterThan,
        lesserEqualThan,
        greaterEqualThan
    }

    namespace Types {

        @public @abstract @valueOnly @final struct ComptimeString {

            @implicitConvert @public func string asstring(ComptimeString value)

        }

        @public @abstract @valueOnly @final struct ComptimeInteger {

            @implicitConvert @public func i8 asi8(ComptimeInteger value)
            @implicitConvert @public func i16 asi16(ComptimeInteger value)
            @implicitConvert @public func i32 asi32(ComptimeInteger value)
            @implicitConvert @public func i64 asi64(ComptimeInteger value)
            @implicitConvert @public func i128 asi128(ComptimeInteger value)
            @implicitConvert @public func u8 asu8(ComptimeInteger value)
            @implicitConvert @public func u16 asu16(ComptimeInteger value)
            @implicitConvert @public func u32 asu32(ComptimeInteger value)
            @implicitConvert @public func u64 asu64(ComptimeInteger value)
            @implicitConvert @public func u128 asu128(ComptimeInteger value)

            @implicitConvert @public func f32 asf32(ComptimeInteger value)
            @implicitConvert @public func f64 asf64(ComptimeInteger value)

        }

        @public @abstract @valueOnly @final struct ComptimeFloating {

            @implicitConvert @public func f32 asf32(ComptimeFloating value)
            @implicitConvert @public func f64 asf64(ComptimeFloating value)

        }

        @public @abstract @valueOnly @final struct ComptimeBoolean {

            @implicitConvert @public func bool asbool(ComptimeBoolean value)
            
        }

    }
}
